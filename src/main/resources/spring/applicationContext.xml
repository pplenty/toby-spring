<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dConnectionMaker" class="com.study.spring.user.dao.DConnectionMaker"/>
    <bean id="connectionMaker" class="com.study.spring.user.dao.CountingConnectionMaker">
        <property name="realConnectionMaker" ref="dConnectionMaker"/>
    </bean>
    <bean id="userDao" class="com.study.spring.user.dao.UserDao">
        <property name="connectionMaker" ref="connectionMaker"/>
    </bean>
</beans>